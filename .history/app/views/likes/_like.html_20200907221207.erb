<% if item.liked_by?(current_user) %>
   <%= link_to(item_add_path(item), class: 'unlike', method: :delete, remote: true, id: :"like-button-#{item.id}") do %>
      <i class="fa-lg fas fa-heart icon-btn liked"></i>
   <% end %>
<% else %>
   <%= link_to(item_add_path(item), class: 'like', method: :post, remote: true, id: :"like-button-#{item.id}") do %>
      <i class="fa-lg fas fa-heart icon-btn not-like"></i>
   <% end %>
<% end %>